<p class= "title is-4">New Post</p>
<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :title, label: "What is your post title?", input_html: { class: "string"}, wrapper: false, label_html: {class: "label"}, placeholder: "Please enter a title", autofocus: true %>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.input :body, label: "Post your content", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Create a new post", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
